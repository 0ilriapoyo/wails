package main

import (
  "github.com/gobuffalo/packr"
	wails "github.com/wailsapp/wails"
)

func main() {

	// Assets
	assets := packr.NewBox("./frontend")

	// Initialise the app
	app := wails.CreateApp(&wails.AppConfig{
		Width:  1024,
		Height: 768,
		Title:  "{{.Name}}",
		HTML:   wails.BoxString(&assets, "main.html"),
	})
	app.Run()
}
